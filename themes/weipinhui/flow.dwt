<script type="text/javascript">
	$(function(){
		var oInput=$(".coLogin_txt");
		var text=$(".coLogin_txt_all label");
		text.click(function(){
			$(this).siblings(oInput).focus();
		});
		oInput.focus(function(){
			$(this).siblings("label").hide();
		});
		oInput.blur(function(){
			if($(this).val()==""){
				$(this).siblings("label").show();
			}
		});
	});
</script>

